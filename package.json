{
  "name": "@anthropic/happy-servicenow-skills",
  "version": "1.0.0",
  "description": "Platform-agnostic AI skills library for ServiceNow - works with Claude, ChatGPT, and any agentic AI system",
  "main": "src/index.js",
  "type": "module",
  "exports": {
    ".": "./src/index.js",
    "./skills/*": "./skills/*",
    "./loader": "./src/loader.js"
  },
  "bin": {
    "sn-skills": "./src/cli.js"
  },
  "scripts": {
    "validate": "node src/validator.js",
    "list": "node src/cli.js list",
    "search": "node src/cli.js search",
    "build:registry": "node src/build-registry.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "keywords": [
    "servicenow",
    "ai-skills",
    "claude",
    "chatgpt",
    "llm",
    "agentic-ai",
    "itsm",
    "itil",
    "incident-management",
    "change-management",
    "cmdb",
    "automation",
    "happy-technologies"
  ],
  "author": "Happy Technologies LLC",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Happy-Technologies-LLC/happy-servicenow-skills.git"
  },
  "homepage": "https://github.com/Happy-Technologies-LLC/happy-servicenow-skills#readme",
  "bugs": {
    "url": "https://github.com/Happy-Technologies-LLC/happy-servicenow-skills/issues"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "glob": "^11.0.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "jest": "^30.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "src/**/*",
    "skills/**/*",
    "templates/**/*",
    "docs/**/*",
    "LICENSE",
    "README.md"
  ]
}
